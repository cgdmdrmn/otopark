<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/haritaImage"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:src="@drawable/harita"
        android:layout_below="@+id/logoImage" />


    <EditText
        android:id="@+id/otoparkAramaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ototopark_ara"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_action_search"
        style="@style/textView"
        android:gravity="center"
        android:autofillHints=""
        android:layout_below="@+id/haritaImage" />

    <TextView
        android:id="@+id/yakinimdakiOtoparklarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yakinimdaki_otoparklar"
        style="@style/textView"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/otoparkAramaEditText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/autoparkListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/closest_auto_park_list_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:scrollbars="vertical"
        android:layout_below="@+id/yakinimdakiOtoparklarTextView"/>

</RelativeLayout>