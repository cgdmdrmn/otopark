<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="YrezervasyonlarFragment"
    android:paddingTop="25dp"
    android:background="@color/white">

            <Button
                android:id="@+id/buttonYeniRezervasyonlar"
                style="@style/Button"
                android:drawableLeft="@drawable/ic_action_date"
                android:layout_width="match_parent"
                android:text="Yeni Rezervasyonlar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"/>
            <Button
                android:id="@+id/buttonGecmisRezervasyonlar"
                style="@style/Button"
                android:drawableLeft="@drawable/ic_action_clock"
                android:layout_width="match_parent"
                android:text="Geçmiş Rezervasyonlar"
                android:layout_below="@+id/buttonYeniRezervasyonlar"
                android:layout_marginTop="4dp"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"/>
</RelativeLayout>