<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <EditText
        style="@style/textView"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aracınızın plakasını giriniz."
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:entries="@array/arac_sinifi_array"
        android:spinnerMode="dialog"
        android:prompt="@string/aracsinifisec"
        android:layout_marginTop="4dp" />

    <CheckBox
        style="@style/textView"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LPG"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/ButtonPlakaEkle"
        style="@style/Button"
        android:drawableLeft="@drawable/ic_action_ekle"
        android:layout_width="match_parent"
        android:text="Plaka Ekle"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>