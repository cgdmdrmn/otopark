<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/kartnoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kart No"
        android:textColorHint="#817B7B"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:maxLength="11"/>

    <EditText
        android:id="@+id/ayEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="AA"
        android:textColorHint="#817B7B"
        android:textColor="@color/black"
        android:paddingLeft="130dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/kartnoEditText"
        android:maxLength="2"/>

    <EditText
        android:id="@+id/yilEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="YYYY"
        android:textColorHint="#817B7B"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:paddingRight="100dp"
        android:maxLength="4"
        android:layout_toRightOf="@+id/ayEditText"
        android:layout_below="@+id/kartnoEditText"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CCV"
        android:textColorHint="#817B7B"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/ayEditText"
        android:maxLength="4"/>

    <CheckBox
        style="@style/textView"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanım koşullarını kabul ediyorum."
        android:layout_below="@+id/editText3"
        android:layout_marginTop="4dp"
        android:theme="@style/MyCheckbox"/>

    <Button
        android:id="@+id/buttonKartEkle"
        style="@style/Button"
        android:drawableLeft="@drawable/ic_action_ekle"
        android:layout_width="match_parent"
        android:text="Kart Ekle"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:enabled="false"/>
</RelativeLayout>