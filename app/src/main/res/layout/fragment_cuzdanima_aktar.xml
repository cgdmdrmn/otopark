<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <Spinner
        style="@style/textView"
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/kartekleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+yeni kart ekleyin"
        android:textColor="#200FB6"
        style="@style/textView"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/spinner1"/>

    <EditText
        android:id="@+id/editText1"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktarmak istediğiniz tutarı girin"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/kartekleTextView"/>

    <CheckBox
        style="@style/textView"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanım koşullarını kabul ediyorum."
        android:layout_below="@+id/editText1"
        android:layout_marginTop="4dp"/>

    <Button
        style="@style/Button"
        android:id="@+id/cuzdanimaaktarButton"
        android:drawableLeft="@drawable/ic_action_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="8dp"
        android:text="Cüzdanıma Aktar" />
</RelativeLayout>