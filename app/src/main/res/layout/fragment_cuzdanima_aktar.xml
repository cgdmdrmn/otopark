<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/kartsecTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ödeme aracınızı seçiniz."
        style="@style/textView"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/kartsecSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kartsecTextView" />

    <TextView
        android:id="@+id/kartekleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+yeni kart ekleyin"
        android:textColor="#200FB6"
        style="@style/textView"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/kartsecSpinner"/>

    <EditText
        android:id="@+id/tutargirEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aktarmak istediğiniz tutarı girin"
        android:textColorHint="#817B7B"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/kartekleTextView"/>

    <CheckBox
        style="@style/textView"
        android:id="@+id/kullanimkosullaricheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanım koşullarını kabul ediyorum."
        android:layout_below="@+id/tutargirEditText"
        android:layout_marginTop="4dp"/>

    <Button
        style="@style/Button"
        android:id="@+id/cuzdanimaaktarButton"
        android:drawableLeft="@drawable/ic_action_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cüzdanıma Aktar"
        android:layout_alignParentBottom="true" />
</RelativeLayout>