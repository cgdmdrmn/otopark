<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="5dp"
    tools:context=".BilgilerimFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_person" />
            <TextView
                android:id="@+id/Textisimsoyisim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="İsim Soyisim"
                style="@style/textView"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical" >
            <EditText
                android:id="@+id/Texteskisifre"
                android:layout_width="match_parent"
                android:importantForAutofill="no"
                android:layout_height="50dp"
                android:hint="Eski şifreniz"
                android:textColorHint="#817B7B"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_action_key"
                android:gravity="center"
                android:layout_centerInParent="true" />

            <EditText
                android:id="@+id/Textyenisifre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Yeni şifreniz"
                android:textColorHint="#817B7B"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                android:drawableLeft="@drawable/ic_action_key"
                android:gravity="center"
                android:layout_centerInParent="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/buttonKaydet"
                style="@style/Button"
                android:layout_width="match_parent"
                android:text="Kaydet" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>